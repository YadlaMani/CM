<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>
<!-- <link rel="stylesheet" href="/css/signup.css"> -->

<div class="row mt-4 body">
  <h1 class="main-heading" style="text-align: center">Edit profile</h1>
  <div class="card login-card">
    <form
      action="/user/<%=user._id%>?_method=PUT"
      method="POST"
      class="needs-validation form center"
      novalidate
    >
      <div class="mb-3">
        <lable for="username" class="form-label">Username</lable>
        <input
          name="user[username]"
          id="username"
          value="<%=user.username%>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">username is neccessary</div>
      </div>
      <div class="mb-3">
        <lable for="email" class="form-label email">Email</lable>
        <input
          name="user[email]"
          id="email"
          value="<%=user.email%>"
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">email is neccessary</div>
      </div>
      <div class="mb-3">
        <lable for="flatno" class="form-label flatno">Enter FlatNo:</lable>
        <input
          name="user[flatno]"
          id="flatno"
          value="<%=user.flatno%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Flat No is neccessary</div>
      </div>

      <div class="mb-3 phone">
        <lable for="phno" class="form-label">Phone No</lable>
        <input
          name="user[phno]"
          id="phno"
          value="<%=user.phno%>"
          type="tel"
          class="form-control"
          required
        />

        <div class="invalid-feedback">password is not valid</div>
      </div>

      <button class="btn btn-success">Add Changes</button>
    </form>
  </div>
</div>
